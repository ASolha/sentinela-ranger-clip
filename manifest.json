{
  "manifest_version": 3,
  "name": "Sentinela Ranger - Clip",
  "version": "3.2",
  "description": "Captura informações de login, modelo de aliança e aros",
  "icons": {
    "16": "icon1.png",
    "32": "icon1.png",
    "48": "icon1.png",
    "128": "icon1.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_title": "Capturar e Copiar Dados",
    "default_icon": {
      "16": "icon1.png",
      "32": "icon1.png",
      "48": "icon1.png",
      "128": "icon1.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}